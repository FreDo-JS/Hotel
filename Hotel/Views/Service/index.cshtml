<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel SS-IGMA</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body class="adminPanel">
    <main class="main-container">
        <div class="box">
            <!-- Lewy panel -->
            <aside class="leftPanel">
                <div class="Up">
                    <img src="~/img/ss.png" alt="Logo SS-IGMA" class="logoSigmy">
                </div>
                <nav class="Down">
                    <ul>
                        <li><a href="" class="adminList">Dashboard</a></li>
                        <li><a href="" class="adminList">Main Menu</a></li>
                        <li><a href="" class="adminList">QR Code</a></li>
                        <li><a href="" class="adminList">Booking</a></li>
                        <li><a href="" class="adminList">Baza danych</a></li>
                    </ul>
                </nav>
            </aside>

            <!-- Prawy panel -->
            <section class="rightPanel">
                <!-- Formularz dostępności -->
                <form action="" class="checkRooms">
                    <div class="flex">
                        <div class="inputChange">
                            <label for="dataPrzyjazdu">Data Przyjazdu</label>
                            <input type="date" id="dataPrzyjazdu" class="dataPrzyjazdu">
                        </div>
                        <div class="inputChange">
                            <label for="dataWyjazdu">Data Wyjazdu</label>
                            <input type="date" id="dataWyjazdu" class="dataWyjazdu">
                        </div>
                        <div class="inputChange">
                            <label for="pietro">Piętro</label>
                            <select id="pietro" class="pietro">
                                <option value="">Wszystkie</option>
                                <option value="parter">Parter</option>
                                <option value="1">1 Piętro</option>
                                <option value="2">2 Piętro</option>
                            </select>
                        </div>
                    </div>
                    <button class="Dostepnosc">Sprawdź dostępność</button>
                    <div class="accessible">
                        <p>W przedziale DATA jest dostępnych : XX pokoi.</p>
                    </div>
                </form>

                <!-- Sekcja rezerwacji -->
                <section class="reservation">
                    <h2>Rezerwacja</h2>
                    <form action="" class="checkReservation">
                        <div class="first">
                            <div class="second">
                                <label for="inputImie">Imię</label>
                                <input type="text" id="inputImie" class="inputImie">
                            </div>
                            <div class="second">
                                <label for="inputNazwisko">Nazwisko</label>
                                <input type="text" id="inputNazwisko" class="inputNazwisko">
                            </div>
                        </div>
                        <div class="first">
                            <div class="second">
                                <label for="inputLiczbaOsob">Liczba osób</label>
                                <input type="number" id="inputLiczbaOsob" class="inputLiczbaOsob">
                            </div>
                            <div class="second">
                                <label for="inputPokoj">Pokój</label>
                                <input type="number" id="inputPokoj" class="inputPokoj">
                            </div>
                        </div>
                        <div class="first">
                            <div class="second">
                                <label for="inputDataPrzyjazdu">Data Przyjazdu</label>
                                <input type="date" id="inputDataPrzyjazdu" class="inputDataPrzyjazdu">
                            </div>
                            <div class="second">
                                <label for="inputDataWyjazdu">Data Wyjazdu</label>
                                <input type="date" id="inputDataWyjazdu" class="inputDataWyjazdu">
                            </div>
                        </div>
                        <button class="checkReserv">Zarezerwuj pokój</button>
                    </form>
                </section>

                <!-- Lista pokoi -->
                <div class="roomsCheckRight">
                    <div class="roomList">
                        <div class="floor">
                            <p>Piętro:</p>
                            <p>Parter</p>
                            <p>1 piętro</p>
                            <p>2 piętro</p>
                            <p>3 piętro</p>
                            <p>4 piętro</p>
                        </div>
                        <div class="rooms">
                            <p>Pokój</p>
                            <span>101, </span><span>102, </span><span>103</span>
                        </div>
                    </div>

                    <!-- Sekcja kodów QR -->
                    <div class="QR">
                        <div class="qRLeftSide">
                            <label for="qrPokoj">Pokój</label>
                            <input type="number" id="qrPokoj" class="qrInput">
                            <label for="qrEmail">Adres mailowy</label>
                            <input type="email" id="qrEmail" class="qrInput">
                            <div class="codeQR">
                                Tu kod qr okok?
                            </div>
                        </div>
                        <div class="QrRightSide">
                            <button class="load">WCZYTAJ POKÓJ</button>
                            <button class="sendQR">WYŚLIJ KOD QR</button>
                            <button class="downloadQR">POBIERZ KOD QR</button>
                            <button class="openIn">OTWÓRZ W KARCIE</button>
                            <button class="generateNew">WYGENERUJ NOWY</button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
</body>
</html>
